<tr>
  <td class="item">
	<% sponsorship.current_user_id = @current_user.id %>
	<%= gravatar_for team_member, :size => 30 %>
    <span class="item_link" >
      <%= link_to sponsorship.user_id, user_path(sponsorship.user_id) %>
    </span>
	<span class="item_commands" >
	  <%= render :partial => 'sponsorships/sponsorship_command', :collection => sponsorship.commands %>	  
	</span>
    <br/>
	<span class="item_status">
	  <%= sponsorship.status %>
	</span>
  </td>
</tr>